
<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control"><br>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control"><br>
            <label for="descrição">Descrição:</label>
            <input type="text" name="descricao" class="form-control"><br>
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" ></textarea><br>
            <label for="categoria" required >Categoria: </label><br>
            <select name="categoria" class="custom-select">
                {{#each categories}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Categoria</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>
